rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.get('role') == 'admin';
    }

    // Helper function to check if user is author of the document
    function isAuthor(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // Blog posts collection rules
    match /blogs/{document=**} {
      // Anyone can read published blog posts
      allow read: if resource.data.published == true;

      // Only authenticated users can read draft posts they authored
      allow read: if request.auth != null && 
                     isAuthor(resource.data.authorId);

      // Only admins can create blog posts
      allow create: if request.auth != null && isAdmin();

      // Only admins or the post author can update
      allow update: if request.auth != null && 
                       (isAdmin() || isAuthor(resource.data.authorId));

      // Only admins or the post author can delete
      allow delete: if request.auth != null && 
                       (isAdmin() || isAuthor(resource.data.authorId));
    }

    // Add other collections with appropriate rules as needed
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
